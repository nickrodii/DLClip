<Window x:Class="DLClip.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DLClip"
        mc:Ignorable="d"
        Title="Settings" Height="300" Width="400" ResizeMode="NoResize" Topmost="True">
    <Grid Width="400" Height="300">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="FFmpeg Installation Folder" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="26" Width="150"/>
        <TextBox x:Name="ffmpegPathText" HorizontalAlignment="Left" Margin="6,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="268" Height="30" FontSize="14" VerticalContentAlignment="Center"/>
        <Button x:Name="chooseFfmpegButton" Content="Choose Folder..." HorizontalAlignment="Left" Margin="279,36,0,0" VerticalAlignment="Top" Width="98" Height="30" Click="chooseFfmpegButton_Click"/>
        <Label Content="yt-dlp Installation Folder" HorizontalAlignment="Left" Margin="10,73,0,0" VerticalAlignment="Top" Height="26" Width="140"/>
        <TextBox x:Name="ytdlpPathText" HorizontalAlignment="Left" Margin="6,99,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="268" Height="30" TextChanged="ytdlpPathText_TextChanged" FontSize="14" VerticalContentAlignment="Center"/>
        <Button x:Name="chooseYtdlpButton" Content="Choose Folder..." HorizontalAlignment="Left" Margin="279,99,0,0" VerticalAlignment="Top" Width="98" Height="30" Click="chooseYtdlpButton_Click"/>
        <Button x:Name="settingsApplyButton" Content="Apply" HorizontalAlignment="Left" Margin="288,215,0,0" VerticalAlignment="Top" Height="31" Width="80" Click="settingsApplyButton_Click"/>
        <Button x:Name="settingsCancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="200,215,0,0" VerticalAlignment="Top" Height="31" Width="74" Click="settingsCancelButton_Click"/>
        <Label Content="(yt-dlp installation is not required, but importing from URL will be disabled.)" HorizontalAlignment="Left" Margin="9,126,0,0" VerticalAlignment="Top" FontSize="9" Foreground="#FF8A8A8A"/>

    </Grid>
</Window>
